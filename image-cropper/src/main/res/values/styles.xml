<resources>

    <!-- Base application theme. -->
    <style name="BXTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="BXTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BXTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.ActionBar">

    </style>

    <style name="BXTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
